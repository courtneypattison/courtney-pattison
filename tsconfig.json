{
    "include": ["./src/**/*"],
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["dom", "es2019"],
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "noEmit": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "typeRoots": [ "./types", "./node_modules/@types"]
    },
    "exclude": ["node_modules", "types"]
  }